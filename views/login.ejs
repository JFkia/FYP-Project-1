<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Apply the background image to the body */
        body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background: linear-gradient(to left, blue, lightskyblue); 
        }
        
        .container {
            padding-top: 100px; /* Adjust padding to center the content vertically */
        }
        
        .card {
            background-color: grey;
        }
        .form-group {
            color: white;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="mt-5 text-center">Login</h1>
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <% errors.forEach(function(error) { %>
                            <p><%= error %></p>
                        <% }); %>
                    </div>
                <% } %>
                <form action="/login" method="POST" class="mt-4">
                    <div class="form-group">
                        <label for="userEmail">Email:</label>
                        <input type="email" id="userEmail" name="userEmail" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password:</label>
                        <input type="password" id="userPassword" name="userPassword" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer') %>
</html>
