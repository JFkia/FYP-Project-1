<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(to right, #0d6efd, #4dabf7);
            min-height: 100vh;
        }
        .card-box {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.15);
            cursor: pointer;
            transition: transform 0.15s ease;
        }
        .card-box:hover {
            transform: translateY(-4px);
        }
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
        }
        tr.clickable-row {
            cursor: pointer;
        }
        tr.clickable-row:hover {
            background-color: #e7f1ff !important;
        }
        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <%- include("partials/navbar") %>
    <div class="sidebar-hover-zone"></div>
    <%- include("partials/sidebar") %>

    <div class="container py-5">

        <!-- Welcome text -->
        <div class="text-white mb-4">
            <h2>Welcome, <%= user ? user.name : "Guest" %></h2>
            <br>
            <p class="hidden">Your role: <strong><%= user ? user.role : "N/A" %></strong></p>
        </div>

        <!-- Stats Row (Clickable) -->
        <div class="row g-3">

            <div class="col-md-3">
                <a href="/deliveries" class="text-decoration-none text-dark">
                    <div class="card-box text-center">
                        <p class="text-muted">Total Deliveries</p>
                        <p class="stat-number"><%= stats ? stats.total : 0 %></p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/deliveries" class="text-decoration-none text-dark">
                    <div class="card-box text-center">
                        <p class="text-muted">Delivered</p>
                        <p class="stat-number text-success"><%= stats ? stats.delivered : 0 %></p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/deliveries" class="text-decoration-none text-dark">
                    <div class="card-box text-center">
                        <p class="text-muted">In Transit</p>
                        <p class="stat-number text-info"><%= stats ? stats.inTransit : 0 %></p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/deliveries" class="text-decoration-none text-dark">
                    <div class="card-box text-center">
                        <p class="text-muted">Exceptions</p>
                        <p class="stat-number text-danger"><%= stats ? stats.exceptions : 0 %></p>
                    </div>
                </a>
            </div>

        </div>

        <!-- Table -->
        <div class="card-box mt-4">
        <h4 class="mb-3">Delivery Records</h4>

        <table class="table table-bordered table-striped bg-white">
            <thead class="table-light">
            <tr>
                <th>Card #</th>
                <th>Recipient</th>
                <th>Address</th>
                <th>Courier</th>
                <th>Status</th>
                <th>Updated At</th>
            </tr>
            </thead>

            <tbody>
            <% if (deliveries && deliveries.length > 0) { %>
                <% deliveries.forEach(d => { %>
                <tr class="clickable-row" onclick="window.location='/deliveries'">
                    <td>
                        <% 
                            // Get raw card number from your schema
                            const rawCard = d.card_number || "";

                            // Simple masking helper
                            function maskCard(card) {
                            if (!card) return "-";
                            const clean = card.replace(/\s+/g, "");   // remove spaces
                            const last4 = clean.slice(-4);
                            return "**** **** **** " + last4;
                            }
                        %>

                        <% if (user && user.role === "admin") { %>
                            <%= rawCard %>   <!-- Admin sees full card number -->
                        <% } else { %>
                            <%= maskCard(rawCard) %>  <!-- Normal user sees masked -->
                        <% } %>
                    </td>
                    <td><%= d.recipient_name %></td>
                    <td><%= d.address %></td>
                    <td><%= d.courier || '-' %></td>
                    <td><%= d.status %></td>
                    <td>
                    <% if (d.updated_at) { %>
                        <%= new Date(d.updated_at).toISOString().slice(0,19).replace('T',' ') %>
                    <% } else { %>
                        -
                    <% } %>
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                <td colspan="6" class="text-center text-muted">
                    No delivery records found.
                </td>
                </tr>
            <% } %>
            </tbody>
        </table>

            <% if (user && user.role === "admin") { %>
                <div class="mt-2 text-end">
                    <a href="/deliveries" class="btn btn-sm btn-outline-primary">
                        View All Deliveries
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
