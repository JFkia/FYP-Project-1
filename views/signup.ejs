<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Signup â€¢ Card Delivery Portal</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: radial-gradient(circle at top left, #4dabf7, #0d1b2a 55%);
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            color: #fff;
        }

        .auth-wrapper {
            min-height: calc(100vh - 56px); /* account for navbar height */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .auth-card {
            width: 100%;
            max-width: 900px;
            border-radius: 1.25rem;
            overflow: hidden;
            background: rgba(15, 23, 42, 0.9);
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.6);
            border: 1px solid rgba(148, 163, 184, 0.4);
        }

        .auth-illustration {
            background: linear-gradient(135deg, #0d6efd, #4dabf7);
            color: #e2f3ff;
        }

        .auth-illustration h2 {
            font-weight: 700;
        }

        .auth-illustration p {
            opacity: 0.9;
        }

        .form-label {
            font-weight: 500;
            color: #e5e7eb;
        }

        .form-control, .form-select {
            background-color: #0b1220;
            border-color: #1f2937;
            color: #e5e7eb;
        }

        .form-control:focus, .form-select:focus {
            background-color: #020617;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            color: #f9fafb;
        }

        .btn-primary {
            border-radius: 999px;
            font-weight: 600;
            letter-spacing: 0.02em;
        }

        .small-link {
            font-size: 0.9rem;
        }

        .badge-role {
            background: rgba(15, 23, 42, 0.35);
            border-radius: 999px;
            padding: 0.35rem 0.75rem;
            font-size: 0.75rem;
            border: 1px solid rgba(226, 232, 240, 0.2);
        }

        .input-icon-wrapper {
            position: relative;
        }
        .input-icon-wrapper .icon-left {
            position: absolute;
            left: 0.85rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: #9ca3af;
        }
        .input-icon-wrapper input,
        .input-icon-wrapper select {
            padding-left: 2.5rem;
        }

        .helper-text {
            font-size: 0.8rem;
            color: #9ca3af;
        }
    </style>
</head>

<body>
    <%- include("partials/navbar") %>

    <div class="auth-wrapper">
        <div class="auth-card row g-0">
            <!-- Left side / illustration -->
            <div class="col-md-5 d-none d-md-flex auth-illustration flex-column justify-content-between p-4">
                <div>
                    <span class="badge-role mb-3">Create your Card Delivery account</span>
                    <h2 class="mb-3">Join the portal</h2>
                    <p class="mb-0">
                        Set up an account to manage card deliveries, track dispatch status,
                        and collaborate securely with your operations and compliance teams.
                    </p>
                </div>
                <div class="mt-4">
                    <small class="d-block text-light opacity-75">
                        Tip: Admin accounts require a valid admin access code issued by your organisation.
                    </small>
                </div>
            </div>

            <!-- Right side / form -->
            <div class="col-md-7 p-4 p-lg-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="h4 mb-0">Create an account</h1>
                    <span class="small text-muted">Card Delivery Portal</span>
                </div>

                <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                    <div class="alert alert-danger py-2">
                        <% errors.forEach(err => { %>
                            <div><%= err %></div>
                        <% }) %>
                    </div>
                <% } %>

                <form action="/signup" method="POST" class="mt-3">
                    <!-- Name -->
                    <div class="mb-3">
                        <label class="form-label" for="name">Full name</label>
                        <div class="input-icon-wrapper">
                            <span class="icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0-3-3 3 
                                             3 0 0 0 3 3zm4 8a4 4 0 0 0-8 0z"/>
                                </svg>
                            </span>
                            <input 
                                type="text" 
                                id="name"
                                name="name" 
                                class="form-control" 
                                placeholder="Jane Doe"
                                value="<%= (typeof formData !== 'undefined' && formData.name) ? formData.name : '' %>"
                                required
                            >
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label" for="email">Email address</label>
                        <div class="input-icon-wrapper">
                            <span class="icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 
                                             2 0 0 1 2 2v8a2 2 0 0 1-2 
                                             2H2a2 2 0 0 1-2-2V4z"/>
                                    <path d="M.05 4.555L8 9.414l7.95-4.86A1.99 
                                             1.99 0 0 0 14 4H2c-.69 0-1.294.35-1.65.555z"/>
                                </svg>
                            </span>
                            <input 
                                type="email" 
                                id="email"
                                name="email" 
                                class="form-control"
                                placeholder="you@company.com"
                                value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>"
                                required
                            >
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <div class="input-icon-wrapper">
                            <span class="icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 1a4 4 0 0 0-4 
                                        4v3h-.5A1.5 1.5 0 0 0 2 9.5v5A1.5 
                                        1.5 0 0 0 3.5 16h9A1.5 1.5 0 0 0 
                                        14 14.5v-5A1.5 1.5 0 0 0 12.5 
                                        8H12V5a4 4 0 0 0-4-4zM6 
                                        5a2 2 0 1 1 4 0v3H6V5z"/>
                                </svg>
                            </span>
                            <input 
                                type="password" 
                                id="password"
                                name="password" 
                                class="form-control" 
                                placeholder="Create a strong password"
                                required
                            >
                        </div>
                    </div>

                    <!-- Role -->
                    <div class="mb-3">
                        <label class="form-label" for="role">Role</label>
                        <div class="input-icon-wrapper">
                            <span class="icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 
                                             6-4 6 3 6 4-1 1-1 1H3z"/>
                                    <path d="M8 8a3 3 0 1 0 0-6 3 
                                             3 0 0 0 0 6z"/>
                                </svg>
                            </span>
                            <select 
                                name="role" 
                                id="role" 
                                class="form-select"
                            >
                                <option 
                                    value="user" 
                                    <%= (typeof formData === 'undefined' || formData.role === 'user') ? 'selected' : '' %>
                                >
                                    User
                                </option>
                                <option 
                                    value="admin" 
                                    <%= (typeof formData !== 'undefined' && formData.role === 'admin') ? 'selected' : '' %>
                                >
                                    Admin
                                </option>
                            </select>
                        </div>
                        <div class="helper-text mt-1">
                            Standard staff accounts should use <strong>User</strong>. Admin is for system owners only.
                        </div>
                    </div>

                    <!-- Admin code field -->
                    <div class="mb-3" id="adminCodeBox" style="display:none;">
                        <label class="form-label" for="adminCode">Admin access code</label>
                        <div class="input-icon-wrapper">
                            <span class="icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3.5 2a.5.5 0 0 0-.5.5v11a.5.5 
                                             0 0 0 .757.429L8 11.101l4.243 
                                             2.828A.5.5 0 0 0 13 13.5v-11a.5.5 
                                             0 0 0-.5-.5h-9z"/>
                                </svg>
                            </span>
                            <input 
                                type="password" 
                                id="adminCode"
                                name="adminCode" 
                                class="form-control" 
                                placeholder="Enter admin access code"
                            >
                        </div>
                        <div class="helper-text mt-1">
                            Required only if you are registering an <strong>Admin</strong> account.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-2">
                        Create account
                    </button>

                    <p class="small-link text-center mt-3 text-muted">
                        Already have an account?
                        <a href="/login" class="text-info text-decoration-none">Sign in instead</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <%- include("partials/footer") %>

    <script>
        const roleSelect = document.getElementById('role');
        const adminBox = document.getElementById('adminCodeBox');

        function toggleAdminBox() {
            if (roleSelect.value === 'admin') {
                adminBox.style.display = 'block';
            } else {
                adminBox.style.display = 'none';
            }
        }

        // On load (for when formData.role === 'admin')
        toggleAdminBox();

        // On change
        roleSelect.addEventListener('change', toggleAdminBox);
    </script>
</body>
</html>
